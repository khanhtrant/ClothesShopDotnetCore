@using X.PagedList
@using X.PagedList.Mvc.Core
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header" data-background-color="purple">
                        <h4 class="title">Categories</h4>
                        <p class="category">List of Category</p>
                    </div>
                    <div class="card-content table-responsive">
                        <table class="table">
                            <thead class="text-primary">
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Description</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var c in ViewBag.OnePageOfCategories)
                            {
                                <tr>
                                    <td>@c.CategoryId</td>
                                    <td>@c.CategoryName</td>
                                    <td>@c.Description</td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div>
                    @Html.PagedListPager((IPagedList)ViewBag.OnePageOfCategories, page => Url.Action("Index", new { page }))
                </div>
            </div>
        </div>
    </div>
</div>