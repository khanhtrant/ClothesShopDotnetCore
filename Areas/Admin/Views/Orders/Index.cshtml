@using X.PagedList
@using X.PagedList.Mvc.Core
@model IEnumerable<ClothesShopDotnetCore.Entities.Orders>


@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header" data-background-color="purple">
                        <h4 class="title">Orders</h4>
                        <p class="category">List of Order</p>
                    </div>
                    <div class="card-content table-responsive">
                        <table class="table">
                            <thead class="text-primary">
                                <tr>
                                    <th>ID</th>
                                    <th>Customer Name</th>
                                    <th>Region</th>
                                    <th>Order Date</th>
                                    <th>Phone</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in ViewBag.OnePageOfOrders)
                                {
                                    <tr>
                                        <td>@order.OrderId</td>
                                        <td>@order.Customer.ContactName</td>
                                        <td>@order.Customer.Region</td>
                                        <td>@order.OrderDate</td>
                                        <td>@order.Customer.Phone</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div>
                    @Html.PagedListPager((IPagedList)ViewBag.OnePageOfOrders, page => Url.Action("Index", new { page }))
                </div>
            </div>
        </div>
    </div>
</div>

